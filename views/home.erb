<!-- Main component for a primary marketing message or call to action -->
<div class="panel panel-default">
	<div class="panel-body">
		<span class="lead">Your ICE number is: <%= @user["twilio_number"] %></span>
	</div>
</div>

<div class="panel panel-primary">
	<div class="panel-heading">Your Contacts</div>
	<ul class="list-group contacts-list">
		<% if @user["contacts"].empty? %>
		<li class="list-group-item">
			You have no contacts setup yet. Click the button below and <strong>get started!</strong>
		</li>
		<% end %>
		<% @user["contacts"].each do |contact|  %>
			<li class="list-group-item">
				<p class="cl-row-header">
					<strong><%= contact["name"] %></strong>
					<%= contact["phone"] %>
					<button type="button" class="btn btn-primary btn-sm cl-edit-button">Edit</button>
				</p>
				<div class="expander-form">
					<form class="form-horizontal">
						<div class="form-group">
							<label class="col-sm-2 control-label">Name</label>
							<div class="col-sm-10">
								<input class="form-control" id="inputContactName" placeholder="<%= contact["name"] %>"/>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label">Contact Type</label>
							<div class="col-sm-10">
								
								<label class="radio-inline">
								  <input type="radio" name="inputContactType" id="inlineRadio1" value="phone"> phone
								</label>
								<label class="radio-inline">
								  <input type="radio" name="inputContactType" id="inlineRadio2" value="text"> text
								</label>
							</div>
						</div>
						<div class="form-group">
							<label for="inputPhone" class="col-sm-2 control-label">Phone Number</label>
							<div class="col-sm-10">
								<input type="phone" class="form-control" id="inputPhone" placeholder="<%= contact["phone"] %>">
							</div>
						</div>
						<div class="form-group">
							<label for="inputMessage" class="col-sm-2 control-label">Message</label>
							<div class="col-sm-10">
								<textarea id="inputMessage" class="form-control" rows="3"></textarea>
							</div>
						</div>
						<button type="submit" class="btn btn-default">Confirm Edit</button>
					</form>
				</div>
			</li>
		<% end %>
	</ul>

</div>

	
