<!-- Main component for a primary marketing message or call to action -->
<div class="panel panel-default">
	<div class="panel-heading">Please <%= @mode %>:</div>
	<div class="panel-body">
		<form id="<%= @mode %>Form" class="form-horizontal" action="/<%= @mode %>" method="POST">

			<div class="form-group">
				<label class="col-sm-2 control-label">Phone Number</label>
				<div class="col-sm-10">
					<div class="input-group">
						<div id="inputUserPhoneExt" class="input-group-addon">+44</div>
						<input class="form-control" id="inputUserPhone" name="inputUserPhone" placeholder="" value="123465123"/>
					</div>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label" for="inputUserPassword">Password</label>
				<div class="col-sm-10">
					<input type="password" class="form-control" id="inputUserPassword" name="inputUserPassword" placeholder="" value="password1">
				</div>
			</div>
			<% if @mode == "register" %>
			<div class="form-group">
				<label class="col-sm-2 control-label">Full Name</label>
				<div class="col-sm-10">
					<input class="form-control" id="inputUserName" name="inputUserName" placeholder=""/>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label" for="inputUserEmail">Email</label>
				<div class="col-sm-10">
					<input type="email" class="form-control" id="inputUserEmail" name="inputUserEmail" placeholder="test@test.com">
				</div>
			</div>
			<%end%>
			<button type="submit" class="btn btn-primary col-sm-offset-2 col-sm-10 text-capitalize"><%= @mode %> <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span></button>
		</form>
		<% if @mode == "login" %>
			<a href="/register">Register here</a>
		<%end%>

	</div>
</div>